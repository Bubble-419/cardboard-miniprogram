.container {
  min-height: 100vh;
  background-color: #f8fbfa;
  position: relative;
  overflow: hidden;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
  position: relative;
  z-index: 10;
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
}

.navbar-left {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  text-align: center;
  flex: 1;
}

.navbar-right {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.navbar-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 触摸交互区域 */
.touch-area {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 200rpx;
  background-color: #f8fbfa;
  z-index: 1;
}

/* 提示文字 */
.instruction-text {
  position: absolute;
  top: 268rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  z-index: 2;
}

.instruction-line {
  font-size: 36rpx;
  font-weight: 600;
  color: #5ec159;
  line-height: 1.5;
  text-align: center;
}

/* 波纹效果 */
.ripple {
  position: fixed;
  width: 0;
  height: 0;
  transform: translate(-50%, -50%);
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease-in;
  z-index: 5;
}

.ripple.visible {
  opacity: 1;
}

.ripple-circle {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border: 2rpx solid #5ec159;
  border-radius: 50%;
  background-color: rgba(94, 193, 89, 0.1);
  pointer-events: none;
}

.ripple-1 {
  width: 172rpx;
  height: 172rpx;
  animation: ripple-animation 1.5s ease-out infinite;
}

.ripple-2 {
  width: 172rpx;
  height: 172rpx;
  animation: ripple-animation 1.5s ease-out 0.5s infinite;
}

.ripple-3 {
  width: 172rpx;
  height: 172rpx;
  animation: ripple-animation 1.5s ease-out 1s infinite;
}

@keyframes ripple-animation {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.8;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 0.4;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.6);
    opacity: 0;
  }
}

/* 倒计时显示 */
.countdown-display {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
}

.countdown-text {
  font-size: 80rpx;
  font-weight: 400;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 玩家数量显示 */
.player-count {
  position: absolute;
  bottom: 350rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: baseline;
  justify-content: center;
  z-index: 2;
}

.count-number {
  font-size: 100rpx;
  font-weight: 600;
  color: #5ec159;
  line-height: 1.1;
}

.count-divider {
  font-size: 36rpx;
  font-weight: 600;
  color: #5ec159;
  margin: 0 4rpx;
  line-height: 1.1;
}

.count-total {
  font-size: 36rpx;
  font-weight: 600;
  color: #5ec159;
  line-height: 1.1;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: transparent;
  padding: 30rpx 54rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  z-index: 10;
}

.skip-btn {
  width: 100%;
  height: 96rpx;
  background-color: #5ec159;
  color: #ffffff;
  border-radius: 28rpx;
  font-size: 44rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  letter-spacing: 4rpx;
}

.skip-btn::after {
  border: none;
}

.skip-btn:active {
  opacity: 0.8;
}

/* 添加玩家按钮 */
.add-player-btn {
  position: absolute;
  top: 218rpx;
  right: 48rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-player-icon {
  width: 100%;
  height: 100%;
}

