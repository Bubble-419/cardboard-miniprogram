.container {
  min-height: 100vh;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
}

.navbar-left {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  text-align: center;
  flex: 1;
}

.navbar-right {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.navbar-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 等待内容区域 */
.waiting-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
}

/* 倒计时 */
.countdown {
  font-size: 80rpx;
  color: #ffffff;
  text-align: center;
  line-height: 1.5;
  font-weight: 400;
  margin-bottom: 40rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 角色图标容器 */
.character-container {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.character-bg {
  width: 438rpx;
  height: 294rpx;
  background-color: rgba(31, 177, 213, 0.15);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.character-icon {
  width: 128rpx;
  height: 120rpx;
  background-color: #4fc8e7;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.character-face {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye {
  width: 26rpx;
  height: 26rpx;
  background-color: #000000;
  border-radius: 50%;
  position: absolute;
  top: 40%;
}

.eye-left {
  left: 25%;
  transform: translate(-50%, -50%);
}

.eye-right {
  right: 25%;
  transform: translate(50%, -50%);
}

.mouth {
  width: 18rpx;
  height: 9rpx;
  border: 2rpx solid #000000;
  border-top: none;
  border-radius: 0 0 18rpx 18rpx;
  position: absolute;
  bottom: 30%;
  left: 50%;
  transform: translateX(-50%);
}

.foot {
  width: 34rpx;
  height: 32rpx;
  background-color: #000000;
  border-radius: 4rpx;
  position: absolute;
  bottom: 10%;
}

.foot-left {
  left: 20%;
}

.foot-right {
  right: 20%;
}

/* 主提示文字 */
.main-text {
  font-size: 56rpx;
  color: #16a6ca;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 500;
  line-height: 1.5;
  padding: 0 40rpx;
}

/* 副提示文字 */
.sub-text {
  font-size: 36rpx;
  color: #9a9a9a;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.33;
}

/* 倒计时 */
.countdown {
  font-size: 80rpx;
  color: #ffffff;
  text-align: center;
  line-height: 1.5;
  font-weight: 400;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

