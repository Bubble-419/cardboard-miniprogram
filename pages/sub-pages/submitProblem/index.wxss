.container {
  min-height: 100vh;
  background-color: #f8fbfa;
  padding-bottom: 200rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
}

.navbar-left {
  width: 174rpx;
  height: 64rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2d2d2d;
  text-align: center;
  flex: 1;
}

.navbar-right {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.navbar-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分类标签区域 */
.categories-section {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 20rpx 41rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  width: 100%;
}

.category-item {
  height: 68rpx;
  padding: 0 20rpx;
  background-color: rgba(31, 177, 213, 0.2);
  border: 2rpx solid #16a6ca;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 0 0 calc((100% - 10rpx) / 2);
  min-width: 0;
  box-sizing: border-box;
  max-width: calc((100% - 10rpx) / 2);
}

.category-item.selected {
  background-color: rgba(31, 177, 213, 0.3);
}

.category-icon {
  width: 28rpx;
  height: 28rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #16a6ca;
  flex: 1;
}

/* 提交区域 */
.submit-section {
  padding: 40rpx 42rpx 0;
}

.submit-header {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  margin-bottom: 20rpx;
  padding-left: 40rpx;
}

.character-icon {
  width: 158rpx;
  height: 202rpx;
  background-color: #4fc8e7;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
}

.character-face {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye {
  width: 32rpx;
  height: 32rpx;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 40%;
}

.eye-left {
  left: 25%;
  transform: translate(-50%, -50%);
}

.eye-right {
  right: 25%;
  transform: translate(50%, -50%);
}

.mouth {
  width: 22rpx;
  height: 11rpx;
  border: 2rpx solid #ffffff;
  border-top: none;
  border-radius: 0 0 22rpx 22rpx;
  position: absolute;
  bottom: 30%;
  left: 50%;
  transform: translateX(-50%);
}

.header-text {
  font-size: 44rpx;
  font-weight: 600;
  color: #16a6ca;
  flex: 1;
  line-height: 1.5;
  padding-top: 20rpx;
}

.example-text {
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.example-label {
  font-size: 24rpx;
  color: #747474;
}

.example-content {
  font-size: 24rpx;
  color: #747474;
}

/* 输入框容器 */
.input-container {
  position: relative;
  background-color: #ffffff;
  border: 2rpx solid #16a6ca;
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  min-height: 200rpx;
  box-sizing: border-box;
}

.problem-input {
  width: 100%;
  min-height: 140rpx;
  font-size: 28rpx;
  color: #3f3f3f;
  line-height: 1.5;
  box-sizing: border-box;
}

.input-placeholder {
  color: #9a9a9a;
  font-size: 28rpx;
}

.input-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
  margin-top: 20rpx;
}

.char-count {
  font-size: 32rpx;
  color: #a7a7a7;
  line-height: 1.05;
}

.submit-icon {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #16a6ca;
  border-radius: 50%;
}

.submit-icon:active {
  opacity: 0.8;
}

.icon-img {
  width: 26rpx;
  height: 26rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: transparent;
  padding: 30rpx 54rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  z-index: 10;
}

.submit-btn {
  width: 100%;
  height: 112rpx;
  background-color: #5ec159;
  color: #ffffff;
  border-radius: 28rpx;
  font-size: 60rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  letter-spacing: 4rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
}

