.container {
  min-height: 100vh;
  background-color: #fafafa;
  padding-bottom: 200rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
}

.navbar-left {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  text-align: center;
  flex: 1;
}

.navbar-right {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.navbar-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 工作坊区域 */
.workshop-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
  height: 72rpx;
  background-color: #ffffff;
}

.workshop-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.workshop-name {
  font-size: 32rpx;
  color: #404040;
}

.players-group {
  display: flex;
  align-items: center;
  gap: -18rpx;
}

.player-avatar {
  width: 72rpx;
  height: 72rpx;
  margin-left: -18rpx;
  position: relative;
}

.player-avatar:first-child {
  margin-left: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.add-player-btn {
  width: 72rpx;
  height: 72rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-player-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(31, 177, 213, 0.2);
  border-radius: 20rpx;
}

.add-player-icon {
  position: relative;
  z-index: 1;
  font-size: 40rpx;
  color: #16a6ca;
  font-weight: 300;
}

/* 分类标签区域 */
.categories-section {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 20rpx 41rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  width: 100%;
}

.category-item {
  height: 68rpx;
  padding: 0 20rpx;
  background-color: rgba(31, 177, 213, 0.2);
  border: 2rpx solid #16a6ca;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 0 0 calc((100% - 10rpx) / 2);
  min-width: 0;
  box-sizing: border-box;
  max-width: calc((100% - 10rpx) / 2);
  /* 禁用交互 */
  pointer-events: none;
}

.category-icon {
  width: 28rpx;
  height: 28rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #16a6ca;
  flex: 1;
}

/* 提示文字 */
.hint-text {
  font-size: 36rpx;
  color: #0099ff;
  text-align: center;
  padding: 20rpx 0;
  background-color: #ffffff;
  font-weight: 400;
  line-height: 1.5;
}

/* 问题列表容器 */
.problems-container {
  height: calc(100vh - 500rpx);
  padding: 20rpx 41rpx;
  box-sizing: border-box;
  width: 100%;
  overflow-x: hidden;
}

/* 问题项 */
.problem-item {
  min-height: 128rpx;
  background-color: #f3f3f3;
  border: 2rpx solid #fcfcfc;
  border-radius: 24rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  overflow: hidden;
  /* 禁用交互 */
  pointer-events: none;
}

.problem-item.ai-summary {
  border-color: #e0e0e0;
}

.problem-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.problem-icon {
  width: 30rpx;
  height: 30rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.problem-text {
  font-size: 28rpx;
  color: #999999;
  line-height: 1.5;
  flex: 1;
}

.problem-text.ai-text {
  color: #565656;
}

.problem-text.ai-text::before {
  content: "AI总结：";
  color: #16a6ca;
}

