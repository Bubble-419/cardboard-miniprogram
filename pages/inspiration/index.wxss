.container {
  min-height: 100vh;
  background-color: #f3f7f7;
  padding-bottom: 120rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.navbar-left {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.navbar-right {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.navbar-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 文本/图像切换 */
.tab-switch {
  position: relative;
  width: 468rpx;
  height: 64rpx;
  background-color: #f4f4f6;
  border-radius: 74rpx;
  display: flex;
  align-items: center;
  padding: 4rpx;
}

.tab-bg {
  position: absolute;
  width: 234rpx;
  height: 56rpx;
  background-color: #ffffff;
  border-radius: 74rpx;
  box-shadow: 0 0 4rpx rgba(66, 66, 83, 0.14);
  transition: transform 0.3s;
  left: 4rpx;
  top: 4rpx;
}

.tab-item {
  flex: 1;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  position: relative;
  z-index: 1;
}

.tab-item.active .tab-text {
  color: #00c876;
}

.tab-icon {
  width: 26rpx;
  height: 26rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #717b7e;
}

/* AI 灵感区域 */
.ai-section {
  padding: 20rpx 24rpx;
  background-color: #ffffff;
}

.ai-input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.ai-input-wrapper {
  flex: 1;
  height: 140rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid #c7ffc4;
  border-radius: 40rpx;
  padding: 20rpx;
  position: relative;
}

.ai-placeholder {
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #828282;
  pointer-events: none;
}

.ai-input {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  color: #424242;
}

.ai-button {
  width: 138rpx;
  height: 48rpx;
  background: linear-gradient(223.34deg, rgba(0, 240, 81, 1) 11.75%, rgba(0, 177, 255, 1) 88.25%);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0.4rpx solid #ffffff;
}

.ai-button-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 已引用灵感标签 */
.referenced-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background-color: #cdffe5;
  border-radius: 25.2rpx;
  padding: 8rpx 16rpx;
  margin-left: 24rpx;
}

.referenced-icon {
  width: 20rpx;
  height: 20rpx;
}

.referenced-text {
  font-size: 20rpx;
  color: #00b46a;
}

/* 瀑布流容器 */
.inspirations-container {
  height: calc(100vh - 400rpx);
  width: 95%;
  padding: 20rpx 24rpx;
}

.waterfall-wrapper {
  display: flex;
  gap: 16rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 灵感卡片 */
.inspiration-card {
  position: relative;
  background-color: #ffffff;
  border: 0.8rpx solid #d6e8eb;
  border-radius: 40rpx;
  padding: 28rpx;
  box-shadow: 0 0 8rpx rgba(94, 223, 255, 0);
  transition: all 0.3s;
}

.inspiration-card.referenced {
  box-shadow: 0 0 8rpx rgba(94, 223, 255, 1);
}

.reference-check {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 38rpx;
  height: 38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  width: 38rpx;
  height: 38rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-text {
  font-size: 24rpx;
  color: #424242;
  line-height: 1.5;
  word-break: break-word;
}

.card-image {
  width: 100%;
  border-radius: 28rpx;
  margin-bottom: 16rpx;
}

/* 音频播放器 */
.audio-player {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.audio-controls {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
}

.audio-time {
  font-size: 20rpx;
  color: #5ec159;
}

.audio-waveform {
  display: flex;
  align-items: center;
  gap: 4rpx;
  height: 30rpx;
}

.wave-bar {
  flex: 1;
  background-color: #5ec159;
  border-radius: 2rpx;
  height: 20rpx;
}

/* 底部输入框 */
.bottom-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eeeff3;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 0.8rpx solid #d7d7d7;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #ffffff;
  border: 0.8rpx solid #d7d7d7;
  border-radius: 28rpx;
  padding: 20rpx 24rpx;
}

.add-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.record-input {
  flex: 1;
  font-size: 32rpx;
  color: #424242;
}

.record-input::placeholder {
  color: #aeaeae;
}

.mic-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

