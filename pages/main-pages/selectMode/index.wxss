.container {
  min-height: 100vh;
  background-color: #f8fbfa;
  padding-bottom: 250rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
}

.navbar-left {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  text-align: center;
  flex: 1;
}

.navbar-right {
  width: 174rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.navbar-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 工作坊区域 */
.workshop-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 42rpx;
  height: 72rpx;
  background-color: #ffffff;
}

.workshop-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.workshop-name {
  font-size: 32rpx;
  color: #374151;
}

.players-group {
  display: flex;
  align-items: center;
  gap: -18rpx;
}

.player-avatar {
  width: 72rpx;
  height: 72rpx;
  margin-left: -18rpx;
  position: relative;
}

.player-avatar:first-child {
  margin-left: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.add-player-btn {
  width: 72rpx;
  height: 72rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-player-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #e9f5e9;
  border-radius: 20rpx;
}

.add-player-icon {
  position: relative;
  z-index: 1;
  font-size: 40rpx;
  color: #5ec159;
  font-weight: 300;
}

/* 分类标签区域 */
.categories-section {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 20rpx 41rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  width: 100%;
}

.category-item {
  height: 68rpx;
  padding: 0 20rpx;
  background-color: #e9f5e9;
  border: 2rpx solid #5ec159;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 0 0 calc((100% - 10rpx) / 2);
  min-width: 0;
  box-sizing: border-box;
  max-width: calc((100% - 10rpx) / 2);
}

.category-icon {
  width: 28rpx;
  height: 28rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #5ec159;
  flex: 1;
}

/* 选中的问题区域 */
.selected-problem-section {
  padding: 12rpx 41rpx;
  background-color: #ffffff;
}

.selected-problem-card {
  background-color: #e9f5e9;
  border-radius: 28rpx;
  padding: 26rpx 88rpx 26rpx 44rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  min-height: 100rpx;
  position: relative;
}

.problem-icon {
  width: 41rpx;
  height: 41rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}

.problem-text {
  font-size: 28rpx;
  color: #747474;
  line-height: 1.2;
  flex: 1;
}

/* 模式选择区域 */
.mode-section {
  padding: 48rpx 39rpx 0;
}

.section-title {
  font-size: 44rpx;
  font-weight: 400;
  color: #5ec159;
  margin-bottom: 16rpx;
}

.mode-list {
  display: flex;
  flex-direction: column;
  gap: 36rpx;
}

.mode-item {
  background-color: #ffffff;
  border: 2rpx solid #fcfcfc;
  border-radius: 34rpx;
  padding: 16rpx;
  min-height: 174rpx;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.06);
  position: relative;
  display: flex;
  flex-direction: column;
}

.mode-item.selected {
  border-color: #5ec159;
}

.mode-content {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

.mode-radio {
  width: 58rpx;
  height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-outer {
  width: 38rpx;
  height: 38rpx;
  border: 2rpx solid #5ec159;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
}

.radio-outer.selected {
  border-color: #5ec159;
}

.radio-inner {
  width: 29rpx;
  height: 29rpx;
  background-color: #5ec159;
  border-radius: 50%;
}

.mode-info {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding-right: 80rpx;
  flex: 1;
  justify-content: center;
}

.mode-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #5ec159;
  line-height: 1.5;
  text-align: center;
  margin-bottom: 16rpx;
  position: relative;
}

.mode-description {
  font-size: 28rpx;
  color: #565656;
  line-height: 1.5;
  text-align: left;
  padding-left: 49rpx;
}

/* 脑暴目标区域 */
.goal-section {
  padding: 48rpx 39rpx 200rpx;
  box-sizing: border-box;
  width: 100%;
}

.slider-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.goal-slider {
  width: 100%;
  height: 48rpx;
  margin: 0;
  box-sizing: border-box;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  padding: 0;
  margin-top: 8rpx;
}

.slider-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #59ae54;
  text-align: center;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 30rpx 54rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.next-btn {
  width: 100%;
  height: 96rpx;
  background-color: #5ec159;
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 44rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  letter-spacing: 4rpx;
}

.next-btn::after {
  border: none;
}

.next-btn:active {
  opacity: 0.8;
}

